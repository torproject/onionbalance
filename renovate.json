{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Schedule updates on first day of each month",
      "matchPackageNames": ["*"],
      "groupName": "all",
      "schedule": ["* * 1 * *"]
    }
  ]
}
